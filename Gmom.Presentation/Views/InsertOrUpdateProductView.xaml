<mah:MetroWindow
    Height="350"
    ResizeMode="NoResize"
    Title="Inserir/Editar Produto"
    Width="500"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    prism:ViewModelLocator.AutoWireViewModel="True"
    x:Class="Gmom.Presentation.Views.InsertOrUpdateProductView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Gmom.Presentation.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <mah:MetroWindow.InputBindings>
        <KeyBinding
            Command="{Binding GenerateBarCodeCommand}"
            Key="G"
            Modifiers="Control" />
    </mah:MetroWindow.InputBindings>

    <Grid Margin="16" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="16" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock
            FontSize="18"
            FontWeight="Bold"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Right"
            Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" />

        <TextBox
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="2"
            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            mah:TextBoxHelper.Watermark="Nome" />

        <TextBox
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="4"
            Text="{Binding BarCode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            mah:TextBoxHelper.Watermark="Código de barras [CTRL + G]" />

        <TextBox
            Grid.Column="0"
            Grid.Row="6"
            Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            mah:TextBoxHelper.Watermark="Preço" />

        <TextBox
            Grid.Column="2"
            Grid.Row="6"
            Text="{Binding Stock, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            mah:TextBoxHelper.Watermark="Quantidade" />

        <Button
            Command="{Binding SaveCommand}"
            Content="_Salvar"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="8"
            IsDefault="True" />
    </Grid>
</mah:MetroWindow>
