<UserControl
    prism:ViewModelLocator.AutoWireViewModel="True"
    x:Class="Gmom.Presentation.Views.CartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ListView ItemsSource="{Binding CartProducts}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Grid Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="4" />
                        <RowDefinition />
                        <RowDefinition Height="8" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        FontSize="14"
                        FontWeight="SemiBold"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Grid.Row="0"
                        Text="{Binding Id}" />

                    <TextBlock
                        Grid.Column="2"
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        MaxWidth="120"
                        Text="{Binding Price, StringFormat={}{0:C}}"
                        TextAlignment="Right"
                        TextWrapping="Wrap" />

                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Grid.Column="0"
                        Grid.Row="2"
                        MaxWidth="560"
                        Text="{Binding Name}"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Grid.Column="2"
                        Grid.Row="2"
                        HorizontalAlignment="Right"
                        MaxWidth="220"
                        Text="{Binding Total, StringFormat=TOTAL: {0:C}}"
                        TextAlignment="Right"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="4"
                        Text="{Binding BarCode}" />

                    <TextBlock
                        Grid.Column="2"
                        Grid.Row="4"
                        Text="{Binding Quantity, StringFormat={}{0:#.##} UN}"
                        TextAlignment="Right" />
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>